sim.eggs.A <- function() {
eggs <- c(rep(1, 2), rep(0, 6))
draws <- sample(eggs, 8, replace = FALSE)
p1 <- draws[1:2]
p2 <- draws[3:4]
p3 <- draws[5:6]
p4 <- draws[7:8]
sum(p1) == 2 || sum(p2) == 2 || sum(p3) == 2 || sum(p4) == 2
}
res <- replicate(100000, sim.eggs.A())
sum(res) / length(res)
